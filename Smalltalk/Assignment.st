BorderedMorph subclass: #TemperatureConverter	instanceVariableNames: 'converterInputField'	classVariableNames: ''	poolDictionaries: ''	category: 'Assignment'!!TemperatureConverter methodsFor: 'initialization' stamp: 'NathanKiernan 11/9/2017 10:21'!initialize	| converterLabel converterButton |	super initialize.	self		bounds: (0 @ 0 corner: 250 @ 130);		color: Color lightGray.	converterLabel := StringMorph new		contents: 'Temperature Converter';		position: 60 @ 5;		color: Color black;		emphasis: 2.	converterInputField := TextMorph new		contents: 'Enter temperature';		bounds: (15 @ 25 corner: 200 @ 55);		borderWidth: 1;		margins: 60 @ 25;		textColor: Color black;		backgroundColor: Color white;		autoFit: false.	converterButton := SimpleButtonMorph new		label: 'Convert';		bounds: (100 @ 105 corner: 150 @ 125);		color: Color blue;		target: self;		actionSelector: #buttonPressed.	self		addMorph: converterLabel;		addMorph: converterInputField;		addMorph: converterButton! !!TemperatureConverter methodsFor: 'action-button-actions' stamp: 'NathanKiernan 10/26/2017 12:25'!buttonPressed	| fahrenheit celsius |	fahrenheit := converterInputField getCharacters asNumber.	celsius := (fahrenheit - 32) / 1.8.	converterInputField		contents: (celsius printShowingDecimalPlaces: 2)! !